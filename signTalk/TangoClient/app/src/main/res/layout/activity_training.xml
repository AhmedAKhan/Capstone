<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_training"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="td.techjam.tangoclient.training.TrainingActivity">

    <TextView
        android:id="@+id/tv_letter"
        style="@style/title"
        android:text="N/A" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tango_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_letter"/>

    <td.techjam.tangoclient.TwoButtonView
        android:id="@+id/bottom_buttons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <td.techjam.tangoclient.HorizontalProgressBarView
        android:id="@+id/progress_bar_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_buttons" />

    <ProgressBar
        android:id="@+id/training_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>
